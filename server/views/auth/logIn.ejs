<%- include ../partials/header.ejs %>

<%- include ../partials/nav.ejs %>
  

  <!-- Main Content -->
  <main> 
    <!-- message area -->
    <% if(messages.lenght > 0){%>
        <div class="alert alert-danger">
            <%= messages %>
        </div>
    <%}%>
    <div class="row justify-content-center text-center">
        <div class="col-4">
            <h1>Please LogIn</h1>
            <form method="POST" autocomplete="off">
                <fieldset class="form-group">
                    <input type="text" class="form-control" placeholder="Username" aria-label="Username" name="username" aria-describedby="basic-addon1" required>
                    <input type="password" class="form-control" placeholder="Password" aria-label="password" name="password" aria-describedby="basic-addon1" required>
                </fieldset>
                <fieldset class="form-group text-right">
                    <a class="btn btn-outline-secondary" href="/registration" role="button">Registrate</a>
                    <input class="btn btn-outline-success" type="submit" value="LogIn">
                    <a class="btn btn-outline-warning" href="/" role="button">Cancel</a>
                </fieldset>
            </form>
        </div>
    </div>
  </main>
  

<%- include ../partials/footer.ejs %>
  




