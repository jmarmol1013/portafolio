<% include ../partials/header.ejs %> <!-- Header of tha page -->

<%-include ../partials/nav.ejs%> <!-- Nav of the page --> 

<main>
   <div class="row justify-content-center text-center">
    <h1>Edit a contact</h1>
    <div class="col-6">
    <form method="POST">
        <div class="input-group mb-3">
            <input type="text" class="form-control" value="<%= contact.name %> " placeholder="Name" aria-label="ContactName" name="name">
          </div>
          
          <div class="input-group mb-3">
            <input type="tel" class="form-control" value="<%= contact.phone %> " aria-label="ContactPhone" name="phone" aria-describedby="basic-addon2">
          </div>
          
          <div class="input-group mb-3">
            <input type="email" class="form-control" value="<%= contact.mail %> "  aria-label="ContactMail" name="mail"> 
          </div>
          <div class="col-12">
            <input type="submit" value="Edit contact" style="width: 50%; margin-bottom: 20px;" class="btn btn-primary greenBtn
            this.stystyle.borderColononmouseoutrimary" onmouseover="this.style.backgroundColor='#03A696'; this.style.borderColor='#03A696';" onmouseout="this.style.backgroundColor='#ffff'">
          </div>
         <div class="col-12">
          <a class="btn btn-outline-warning" href="/contact-list/"  style="width: 50%; margin-bottom: 20px;" role="button">Cancel</a>
         </div>
    </form>
    </div>          
   </div>
</main>

<%-include ../partials/footer.ejs%> <!--Footer of the page-->